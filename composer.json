{
    "name": "sof3/pharynx",
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.4",
        "phpstan/phpstan": "^1.7",
        "phpunit/phpunit": "^9.5.16 <9.5.17"
    },
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "SOFe",
            "email": "sofe2038@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "SOFe\\Pharynx\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SOFe\\Pharynx\\": ["tests"]
        }
    },
    "bin": ["pharynx"],
    "scripts": {
        "all": [
            "composer install",
            "php-cs-fixer fix",
            "phpstan analyze",
            "phpunit tests",
            "php -dphar.readonly=0 build.php"
        ],
        "fmt": [
            "composer install",
            "php-cs-fixer fix"
        ],
        "lint": [
            "composer install",
            "phpstan analyze"
        ],
        "test": [
            "composer install",
            "phpunit tests"
        ],
        "build": [
            "php -dphar.readonly=0 build.php"
        ]
    }
}
